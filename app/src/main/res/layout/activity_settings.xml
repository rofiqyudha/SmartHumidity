<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueapp2"
    tools:context=".SettingsActivity">

    <FrameLayout
        android:id="@+id/framepersonal"
        android:layout_width="365dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_background_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvpersonal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Personal Information"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivpersonal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_right_black" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/framenotification"
        android:layout_width="365dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background_white"
        app:layout_constraintEnd_toEndOf="@+id/framepersonal"
        app:layout_constraintStart_toStartOf="@+id/framepersonal"
        app:layout_constraintTop_toBottomOf="@+id/framepersonal">

        <TextView
            android:id="@+id/tvnotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="App Notification"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivnotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_right_black" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameaccount"
        android:layout_width="365dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background_white"
        app:layout_constraintEnd_toEndOf="@+id/framenotification"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/framenotification"
        app:layout_constraintTop_toBottomOf="@+id/framenotification">

        <TextView
            android:id="@+id/tvaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Account and Security"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_right_black" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame_about"
        android:layout_marginTop="20dp"
        android:layout_width="365dp"
        android:layout_height="40dp"
        android:background="@drawable/button_background_white"
        app:layout_constraintEnd_toEndOf="@+id/frameaccount"
        app:layout_constraintStart_toStartOf="@+id/frameaccount"
        app:layout_constraintTop_toBottomOf="@+id/frameaccount">

        <TextView
            android:id="@+id/tvaboutapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="About Application"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/ivaboutapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_right_black" />
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:background="@color/white"
        app:itemIconTint="@color/bottom_nav_item_color"
        app:itemTextColor="@color/bottom_nav_item_color"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/buttom_nav_menu" />



</androidx.constraintlayout.widget.ConstraintLayout>